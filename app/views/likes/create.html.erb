
<% if !current_user.likes.find_by(user_id: current_user.id, post_id: params[:id]) %>
  <%= form_for @like(post_id: params[:id], url: user_post_likes_path do |f| %>
    <%= f.button "Like" %>
  <% end %>
<% else %>
  <%= form_for @like(post_id: params[:id], url: user_post_like_path do |f| %>
    <%= f.button "Unlike" %>
  <% end %>
<% end %>
